<h1>Eat a burger!</h1>
<div class="container">
    <div class="row">
        <!-- Div for burgers available for eating -->
        <div class="col-md-4" id="burgers-available">
            <h2>Burgers ready to be eaten</h2>
            <ul>
                {{#each burgers}} {{#unless this.devour}}
                <li>
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devour" value="true">
                        <button type="submit">DEVOUR!</button>
                    </form>
                    {{> cats/delete-cat}}
                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
        <!-- Div for burgers eaten -->
        <div class="col-md-4" id="burgers-eaten">
            <h2>Burgers eaten</h2>
            <ul>
                {{#each burgers}} {{#if this.devour}}
                <li>
                    {{this.burger_name}}
                    <!-- <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="false">
                <button type="submit">THROW UP!</button>
            </form> -->
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div> 
    <!-- closing row div -->
    <!-- Adding a new burger -->
    <div class="row" id="form">
        <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">
            <div class="form-group">
                <input type="text" name="burger_name" placeholder="Enter a burger you want to eat and click the 'Add Burger' button">
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </div>
    <!-- closing row div -->
</div>
<!-- closing container div -->